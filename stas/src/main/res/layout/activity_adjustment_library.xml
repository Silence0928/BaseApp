<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_bg_color_gray">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/ll_btn">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/base_bg_color_gray">

                <TextView
                    android:id="@+id/tv_made_finished_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="制造完了标签："
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.lib_common.view.widget.ClearEditText
                    android:id="@+id/cet_made_finished_tag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_shape_et_white_5dp"
                    android:hint="请扫描"
                    android:enabled="false"
                    android:padding="10dp"
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@+id/tv_made_finished_tag"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="" />

                <TextView
                    android:id="@+id/tv_rotary_designation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="回转番号："
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_made_finished_tag" />

                <TextView
                    android:id="@+id/cet_rotary_designation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_shape_et_gray_5dp"
                    android:padding="10dp"
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@+id/cet_made_finished_tag"
                    app:layout_constraintLeft_toRightOf="@+id/tv_rotary_designation"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_made_finished_tag"
                    tools:text="" />

                <TextView
                    android:id="@+id/tv_forework_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="前工程号："
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cet_rotary_designation" />

                <TextView
                    android:id="@+id/cet_forework_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_shape_et_gray_5dp"
                    android:padding="10dp"
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@+id/cet_made_finished_tag"
                    app:layout_constraintLeft_toRightOf="@+id/tv_forework_num"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cet_rotary_designation"
                    tools:text="" />
                <TextView
                    android:id="@+id/tv_in_library_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="在库状态："
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_forework_num" />

                <TextView
                    android:id="@+id/cet_in_library_state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_shape_et_gray_5dp"
                    android:padding="10dp"
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@+id/cet_made_finished_tag"
                    app:layout_constraintLeft_toRightOf="@+id/tv_in_library_state"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cet_forework_num"
                    tools:text="" />

                <TextView
                    android:id="@+id/tv_goods_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="数量："
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_in_library_state" />

                <com.lib_common.view.widget.LimitNumEditText
                    android:id="@+id/cet_goods_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_shape_et_white_5dp"
                    android:hint="请输入"
                    android:padding="10dp"
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@+id/cet_made_finished_tag"
                    app:layout_constraintLeft_toRightOf="@+id/tv_goods_num"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cet_in_library_state"
                    tools:text=""
                    app:decimalsNum="0"/>

                <TextView
                    android:id="@+id/tv_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="调整原因："
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_goods_num" />

                <TextView
                    android:id="@+id/cet_reason"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_shape_et_white_5dp"
                    android:hint="请选择"
                    android:padding="10dp"
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@+id/cet_made_finished_tag"
                    app:layout_constraintLeft_toRightOf="@+id/tv_reason"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cet_goods_num"
                    tools:text="" />

                <View
                    android:id="@+id/v_reason_arrow"
                    android:layout_width="10dp"
                    android:layout_height="6dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/ic_down_gray"
                    app:layout_constraintBottom_toBottomOf="@+id/cet_reason"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/cet_reason" />

                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="备注："
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_reason"
                    app:layout_constraintStart_toStartOf="parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintLeft_toLeftOf="@+id/cet_made_finished_tag"
                    app:layout_constraintLeft_toRightOf="@+id/tv_remark"
                    app:layout_constraintTop_toBottomOf="@+id/tv_reason"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@drawable/bg_shape_et_white_5dp"
                    android:orientation="vertical">

                    <com.lib_common.view.widget.ClearEditText
                        android:id="@+id/cet_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="top"
                        android:hint="请输入备注信息，限100字以内。"
                        android:minLines="2"
                        android:maxLength="100"
                        android:paddingLeft="5dp"
                        android:paddingBottom="6dp"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/text_middle" />

                    <TextView
                        android:id="@+id/tv_limit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:background="@color/white"
                        android:paddingTop="5dp"
                        android:paddingHorizontal="5dp"
                        android:text="0/100"
                        android:textColor="@color/gray04"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.coorchice.library.SuperTextView
                android:id="@+id/stv_save_storage_collection"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:stv_corner="50dp"
                app:stv_solid="@color/main_color" />

            <com.coorchice.library.SuperTextView
                android:id="@+id/stv_cancel_storage_collection"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/main_color"
                android:textSize="15sp"
                app:stv_corner="50dp"
                app:stv_solid="@color/white"
                app:stv_stroke_color="@color/main_color"
                app:stv_stroke_width="1dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>