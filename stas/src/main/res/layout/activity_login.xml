<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:background="@drawable/bg_login"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_below="@id/iv_bg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:paddingTop="20dp"
                android:text="欢迎使用出货追溯采集系统"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/logo" />

            <TextView
                android:id="@+id/tv_login_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:paddingRight="20dp"
                android:text="工号"
                android:textSize="18sp"
                android:textColor="@color/black_666666"
                app:layout_constraintLeft_toLeftOf="@+id/tv_welcome"
                app:layout_constraintTop_toBottomOf="@+id/tv_welcome" />

            <com.lib_common.view.widget.ClearEditText
                android:id="@+id/et_job_num"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginEnd="28dp"
                android:layout_marginRight="23dp"
                android:background="@null"
                android:textSize="16sp"
                android:hint="请输入工号"
                android:textColorHint="@color/black_999999"
                app:layout_constraintLeft_toLeftOf="@+id/tv_welcome"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_login_num" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/gray_DDDDDD"
                app:layout_constraintLeft_toLeftOf="@+id/et_job_num"
                app:layout_constraintRight_toRightOf="@+id/et_job_num"
                app:layout_constraintTop_toBottomOf="@+id/et_job_num" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="19dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="@id/et_job_num"
                app:layout_constraintRight_toRightOf="@id/et_job_num"
                app:layout_constraintTop_toBottomOf="@id/et_job_num">


                <TextView
                    android:id="@+id/tv_text_login_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密码"
                    android:textSize="18sp"
                    android:textColor="@color/black_666666"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.lib_common.view.widget.PasswordEditText
                    android:id="@+id/et_pwd"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:background="@color/white"
                    android:textSize="16sp"
                    android:hint="请输入密码"
                    android:textColorHint="@color/black_999999"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_text_login_pwd" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/gray_DDDDDD"
                    app:layout_constraintLeft_toLeftOf="@+id/et_pwd"
                    app:layout_constraintRight_toRightOf="@+id/et_pwd"
                    app:layout_constraintTop_toBottomOf="@+id/et_pwd" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/tv_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="28dp"
                android:text="忘记密码"
                android:visibility="gone"
                android:textColor="@color/blue_0091FF"
                android:textSize="13sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_pwd" />

            <TextView
                android:id="@+id/tv_system_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="28dp"
                android:text="系统设置"
                android:textColor="@color/blue_0091FF"
                android:textSize="13sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_pwd" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_sys_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/tv_system_setting">

                <TextView
                    android:id="@+id/tv_setting_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="环境地址"
                    android:textSize="18sp"
                    android:textColor="@color/black_666666"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.lib_common.view.widget.ClearEditText
                    android:id="@+id/et_url"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:background="@color/white"
                    android:textSize="16sp"
                    android:hint="请输入环境地址"
                    android:textColorHint="@color/black_999999"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_setting_url" />

               <View
                    android:id="@+id/v_url_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/gray_DDDDDD"
                    app:layout_constraintLeft_toLeftOf="@+id/et_url"
                    app:layout_constraintRight_toRightOf="@+id/et_url"
                    app:layout_constraintTop_toBottomOf="@+id/et_url" />

                <!--<TextView
                   android:id="@+id/tv_setting_port"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="端口号"
                   android:layout_marginTop="20dp"
                   android:textColor="@color/black_999999"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/v_url_line" />

               <com.lib_common.view.widget.ClearEditText
                   android:id="@+id/et_port"
                   android:layout_width="0dp"
                   android:layout_height="35dp"
                   android:background="@color/white"
                   android:maxLength="18"
                   android:textSize="18sp"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/tv_setting_port" />

               <View
                   android:layout_width="0dp"
                   android:layout_height="1dp"
                   android:background="@color/gray_DDDDDD"
                   app:layout_constraintLeft_toLeftOf="@+id/et_port"
                   app:layout_constraintRight_toRightOf="@+id/et_port"
                   app:layout_constraintTop_toBottomOf="@+id/et_port" />-->

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.coorchice.library.SuperTextView
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:alpha="0.5"
                android:gravity="center"
                android:padding="10dp"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/cl_sys_setting"
                app:stv_corner="8dp"
                app:stv_shaderEnable="true"
                app:stv_shaderEndColor="@color/green_33AF6B"
                app:stv_shaderMode="leftToRight"
                app:stv_shaderStartColor="@color/green_4CB57E"
                app:stv_solid="@color/main_color" />

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="公司名称"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/tv_login"
                app:layout_constraintBottom_toTopOf="@+id/tv_version"/>

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:text="版本：V1.0.0"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>