<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_bg_color_gray">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/ll_btn">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/base_bg_color_gray">


                <TextView
                    android:id="@+id/tv_refund_instruction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="出货指示书："
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.lib_common.view.widget.ClearEditText
                    android:id="@+id/cet_refund_instruction"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_shape_et_white_5dp"
                    android:hint="请扫描"
                    android:enabled="false"
                    android:padding="10dp"
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@+id/tv_refund_instruction"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="" />

                <com.bin.david.form.core.SmartTable
                    android:id="@+id/table_shipment_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/white"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:paddingBottom="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_refund_instruction" />

                <LinearLayout
                    android:id="@+id/ll_all_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:background="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/table_shipment_cancel">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/cb_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/bg_check_status"
                        android:layout_marginStart="10dp"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tv_all"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingStart="5dp"
                        android:text="全选"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_refund_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="出货取消原因："
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_all_select"/>

                <TextView
                    android:id="@+id/cet_refund_reason"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_shape_et_white_5dp"
                    android:hint="请选择"
                    android:padding="10dp"
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@+id/tv_refund_reason"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_all_select"
                    tools:text="" />

                <View
                    android:id="@+id/v_refund_reason_arrow"
                    android:layout_width="10dp"
                    android:layout_height="6dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/ic_down_gray"
                    app:layout_constraintBottom_toBottomOf="@+id/cet_refund_reason"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/cet_refund_reason" />

                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="备注："
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_refund_reason"
                    app:layout_constraintStart_toStartOf="parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    app:layout_constraintLeft_toLeftOf="@+id/cet_refund_reason"
                    app:layout_constraintLeft_toRightOf="@+id/tv_remark"
                    app:layout_constraintTop_toBottomOf="@+id/tv_refund_reason"
                    app:layout_constraintRight_toRightOf="@+id/table_shipment_cancel"
                    android:background="@drawable/bg_shape_et_white_5dp"
                    android:orientation="vertical">

                    <com.lib_common.view.widget.ClearEditText
                        android:id="@+id/cet_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="top"
                        android:hint="请输入备注信息，限100字以内。"
                        android:minLines="2"
                        android:maxLength="100"
                        android:paddingLeft="5dp"
                        android:paddingBottom="6dp"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/text_middle" />

                    <TextView
                        android:id="@+id/tv_limit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:background="@color/white"
                        android:paddingTop="5dp"
                        android:paddingHorizontal="5dp"
                        android:text="0/100"
                        android:textColor="@color/gray04"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.coorchice.library.SuperTextView
                android:id="@+id/stv_save_refund_collection"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:stv_corner="50dp"
                app:stv_solid="@color/main_color" />

            <com.coorchice.library.SuperTextView
                android:id="@+id/stv_cancel_refund_collection"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/main_color"
                android:textSize="15sp"
                app:stv_corner="50dp"
                app:stv_solid="@color/white"
                app:stv_stroke_color="@color/main_color"
                app:stv_stroke_width="1dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>