<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_bg_color_gray">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/ll_btn">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/base_bg_color_gray">

                <TextView
                    android:id="@+id/tv_storage_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="入库日期："
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/cet_storage_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_shape_et_white_5dp"
                    android:hint="请选择"
                    android:maxLength="50"
                    android:padding="10dp"
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@+id/cet_made_finished_tag"
                    app:layout_constraintLeft_toRightOf="@+id/tv_storage_date"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="" />

                <View
                    android:id="@+id/v_storage_date_arrow"
                    android:layout_width="6dp"
                    android:layout_height="9dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/icon_more"
                    app:layout_constraintBottom_toBottomOf="@+id/cet_storage_date"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/cet_storage_date" />

                <TextView
                    android:id="@+id/tv_storage_order_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="入库单号："
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_storage_date" />

                <TextView
                    android:id="@+id/cet_storage_order_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_shape_et_white_5dp"
                    android:hint="请选择"
                    android:maxLength="50"
                    android:padding="10dp"
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@+id/cet_made_finished_tag"
                    app:layout_constraintLeft_toRightOf="@+id/tv_storage_order_no"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_storage_date"
                    tools:text="" />

                <View
                    android:id="@+id/v_order_no_arrow"
                    android:layout_width="10dp"
                    android:layout_height="6dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/ic_down_gray"
                    app:layout_constraintBottom_toBottomOf="@+id/cet_storage_order_no"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/cet_storage_order_no" />

                <TextView
                    android:id="@+id/tv_made_finished_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="制造完了标签："
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cet_storage_order_no" />

                <com.lib_common.view.widget.ClearEditText
                    android:id="@+id/cet_made_finished_tag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_shape_et_white_5dp"
                    android:hint="请扫描"
                    android:maxLength="50"
                    android:padding="10dp"
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    android:enabled="false"
                    app:layout_constraintRight_toLeftOf="@+id/stv_query_storage_collection"
                    app:layout_constraintLeft_toRightOf="@+id/tv_made_finished_tag"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cet_storage_order_no"
                    tools:text="" />

                <com.coorchice.library.SuperTextView
                    android:id="@+id/stv_query_storage_collection"
                    android:layout_width="60dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="查询"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:stv_corner="5dp"
                    app:stv_solid="@color/main_color"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/cet_made_finished_tag"
                    app:layout_constraintTop_toTopOf="@+id/cet_made_finished_tag"/>

                <com.bin.david.form.core.SmartTable
                    android:id="@+id/table_storage_collection"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/white"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cet_made_finished_tag" />

                <TextView
                    android:id="@+id/tv_total_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="单据数/总数量："
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/table_storage_collection"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/cet_total_box_num"
                    android:layout_width="100dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_shape_et_gray_5dp"
                    android:enabled="false"
                    android:gravity="center"
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_total_num"
                    app:layout_constraintLeft_toRightOf="@+id/tv_total_num"
                    app:layout_constraintTop_toTopOf="@+id/tv_total_num"
                    tools:text="1000" />

                <TextView
                    android:id="@+id/tv_total_num_split"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="/"
                    android:textColor="@color/black_333333"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/cet_total_box_num"
                    app:layout_constraintLeft_toRightOf="@+id/cet_total_box_num"
                    app:layout_constraintTop_toTopOf="@+id/cet_total_box_num" />

                <TextView
                    android:id="@+id/cet_total_num"
                    android:layout_width="100dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_shape_et_gray_5dp"
                    android:enabled="false"
                    android:gravity="center"
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/cet_total_box_num"
                    app:layout_constraintLeft_toRightOf="@+id/tv_total_num_split"
                    app:layout_constraintTop_toTopOf="@+id/cet_total_box_num"
                    tools:text="1000" />

                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="备注："
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_total_num"
                    app:layout_constraintStart_toStartOf="parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    app:layout_constraintLeft_toRightOf="@+id/tv_remark"
                    app:layout_constraintTop_toBottomOf="@+id/cet_total_num"
                    app:layout_constraintRight_toRightOf="@+id/table_storage_collection"
                    android:background="@drawable/bg_shape_et_white_5dp"
                    android:orientation="vertical">

                    <com.lib_common.view.widget.ClearEditText
                        android:id="@+id/cet_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="top"
                        android:hint="请输入备注信息，限100字以内。"
                        android:minLines="2"
                        android:maxLength="100"
                        android:paddingLeft="5dp"
                        android:paddingBottom="6dp"
                        android:textColor="@color/black_333333"
                        android:textSize="@dimen/text_middle" />

                    <TextView
                        android:id="@+id/tv_limit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:background="@color/white"
                        android:paddingTop="5dp"
                        android:paddingHorizontal="5dp"
                        android:text="0/100"
                        android:textColor="@color/gray04"
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.coorchice.library.SuperTextView
                android:id="@+id/stv_save_storage_collection"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:stv_corner="50dp"
                app:stv_solid="@color/main_color" />

            <com.coorchice.library.SuperTextView
                android:id="@+id/stv_cancel_storage_collection"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/main_color"
                android:textSize="15sp"
                app:stv_corner="50dp"
                app:stv_solid="@color/white"
                app:stv_stroke_color="@color/main_color"
                app:stv_stroke_width="1dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>