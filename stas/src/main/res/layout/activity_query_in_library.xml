<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_bg_color_gray">


        <TextView
            android:id="@+id/tv_made_finished_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="制造完了标签："
            android:textColor="@color/black_333333"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.lib_common.view.widget.ClearEditText
            android:id="@+id/cet_made_finished_tag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_shape_et_white_5dp"
            android:hint="请扫描或输入"
            android:maxLength="50"
            android:padding="10dp"
            android:textColor="@color/black_333333"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_made_finished_tag"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="" />


        <TextView
            android:id="@+id/tv_forework_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="前工程号："
            android:textColor="@color/black_333333"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_made_finished_tag" />

        <TextView
            android:id="@+id/cet_forework_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_shape_et_white_5dp"
            android:hint="请输入"
            android:maxLength="50"
            android:padding="10dp"
            android:textColor="@color/black_333333"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/cet_made_finished_tag"
            app:layout_constraintLeft_toRightOf="@+id/tv_forework_number"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_made_finished_tag"
            tools:text="" />


        <TextView
            android:id="@+id/tv_rotary_designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="回转番号："
            android:textColor="@color/black_333333"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cet_forework_number" />

        <com.lib_common.view.widget.ClearEditText
            android:id="@+id/cet_rotary_designation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_shape_et_white_5dp"
            android:hint="请输入"
            android:maxLength="50"
            android:padding="10dp"
            android:textColor="@color/black_333333"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/cet_made_finished_tag"
            app:layout_constraintLeft_toRightOf="@+id/tv_rotary_designation"
            app:layout_constraintRight_toLeftOf="@+id/stv_query_storage_collection"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cet_forework_number"
            tools:text="" />

        <com.coorchice.library.SuperTextView
            android:id="@+id/stv_query_storage_collection"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:text="查询"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/cet_rotary_designation"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cet_rotary_designation"
            app:stv_corner="5dp"
            app:stv_solid="@color/main_color" />

        <com.bin.david.form.core.SmartTable
            android:id="@+id/table_goods"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cet_rotary_designation"
            app:layout_constraintBottom_toTopOf="@+id/tv_total_num"/>

        <TextView
            android:id="@+id/tv_total_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="总箱数/总数量："
            android:textColor="@color/black_333333"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/cet_total_box_num"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_shape_et_white_5dp"
            android:enabled="false"
            android:gravity="center"
            android:textColor="@color/black_333333"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_total_num"
            app:layout_constraintLeft_toRightOf="@+id/tv_total_num"
            app:layout_constraintTop_toTopOf="@+id/tv_total_num"
            tools:text="1000" />

        <TextView
            android:id="@+id/tv_total_num_split"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="/"
            android:textColor="@color/black_333333"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/cet_total_box_num"
            app:layout_constraintLeft_toRightOf="@+id/cet_total_box_num"
            app:layout_constraintTop_toTopOf="@+id/cet_total_box_num" />

        <TextView
            android:id="@+id/cet_total_num"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_shape_et_white_5dp"
            android:enabled="false"
            android:gravity="center"
            android:textColor="@color/black_333333"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/cet_total_box_num"
            app:layout_constraintLeft_toRightOf="@+id/tv_total_num_split"
            app:layout_constraintTop_toTopOf="@+id/cet_total_box_num"
            tools:text="1000" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>