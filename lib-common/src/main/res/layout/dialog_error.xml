<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/bg_shape_et_white_10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:text="提示"
        android:textColor="@color/black04"
        android:textSize="16sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white02" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_bg_color_gray"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/tv_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:lineSpacingExtra="3dp"
            tools:text="弹窗后，画面锁定，不允许关闭，不允许返回，只能通过解锁或返回按钮关闭"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black04"
            android:textSize="@dimen/text_middle"/>

        <TextView
            android:id="@+id/tv_work_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工号"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black04"
            android:textSize="@dimen/text_small_l"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_reason"/>

        <com.lib_common.view.widget.ClearEditText
            android:id="@+id/et_work_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/text_middle"
            android:hint="请扫描或输入工号"
            android:textColor="@color/black01"
            android:background="@drawable/bg_shape_et_white_5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_work_no"
            app:layout_constraintLeft_toLeftOf="parent"/>


        <TextView
            android:id="@+id/tv_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:paddingTop="12dp"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toBottomOf="@+id/et_work_no"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black04"
            android:textSize="@dimen/text_small_l" />

        <com.lib_common.view.widget.PasswordEditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:hint="请输入密码"
            android:digits="0123456789xX"
            android:maxLength="20"
            android:textSize="@dimen/text_middle"
            android:textColor="@color/black04"
            android:background="@drawable/bg_shape_et_white_5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_pwd"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:paddingBottom="5dp"
            android:text="备注："
            android:textColor="@color/black04"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/et_pwd"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginStart="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_remark"
            app:layout_constraintRight_toRightOf="@+id/et_pwd"
            android:background="@drawable/bg_shape_et_white_5dp"
            android:orientation="vertical">

            <com.lib_common.view.widget.ClearEditText
                android:id="@+id/et_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="top"
                android:hint="请输入备注信息，限100字以内。"
                android:minLines="1"
                android:maxLength="100"
                android:paddingLeft="5dp"
                android:paddingBottom="6dp"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/text_middle" />

            <TextView
                android:id="@+id/tv_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:background="@color/white"
                android:paddingTop="5dp"
                android:paddingHorizontal="5dp"
                android:text="0/100"
                android:textColor="@color/gray04"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white02" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_neg"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="@drawable/alertdialog_left_selector"
            android:gravity="center"
            android:text="返回"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="0.5dp"
            android:layout_height="43dp"
            android:background="@color/white02" />

        <Button
            android:id="@+id/btn_pos"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="@drawable/alertdialog_right_selector"
            android:gravity="center"
            android:text="解锁"
            android:textColor="@color/main_color"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>